<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/queno"
            android:text="0"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/questiontxt"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:padding="12dp"

            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="question"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">



     <!--   <TextView
            android:layout_width="wrap_content"
            android:id="@+id/questiontxt"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:padding="12dp"

            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="question"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/optionAtxt"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="Option A"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/optionBtxt"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="Option B"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/optionCtxt"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="12dp"
            android:textSize="14sp"
            android:text="Option C"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/optionDtxt"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="Option D"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#32BA38"
            android:id="@+id/display"
            android:padding="12dp"
            android:textSize="14sp"
            android:text="Click here for Answer"
            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/anstxt"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="12dp"
            android:textSize="14sp"
            android:text="answer option"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/answertxt"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="12dp"
            android:textColor="@color/black"

            android:textSize="15dp"
            android:text="answer"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>